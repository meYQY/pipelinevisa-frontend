# ===========================================
# PipelineVisa Frontend - Zeabur环境变量配置  
# ===========================================

# === 基础配置 ===
NODE_ENV=production
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# === API连接配置 ===
# 替换为你的后端服务域名
NEXT_PUBLIC_API_URL=https://你的后端域名.zeabur.app

# === 应用信息 ===
NEXT_PUBLIC_APP_NAME=流水签
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=production

# === 域名配置 ===  
NEXT_PUBLIC_DOMAIN=你的前端域名.zeabur.app

# === 安全配置 ===
NEXTAUTH_SECRET=生成一个32位以上的密钥
NEXTAUTH_URL=https://你的前端域名.zeabur.app

# === 功能开关 ===
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false